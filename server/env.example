# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Configuration
# MONGODB_ATLAS_URL을 우선 사용, 없을 경우 로컬 주소 사용
# MongoDB Atlas 사용 시:
MONGODB_ATLAS_URL=mongodb+srv://username:password@cluster.mongodb.net/shopping-mall?retryWrites=true&w=majority

# 로컬 MongoDB 사용 시 (MONGODB_ATLAS_URL이 없을 때만 사용됨):
# mongodb://localhost:27017/shopping-mall

# JWT Configuration
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRE=7d

# Session Configuration
SESSION_SECRET=your-session-secret-change-in-production

# Frontend URL
FRONTEND_URL=http://localhost:5173

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:5000/api/auth/social/google/callback

# Facebook OAuth Configuration
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret
FACEBOOK_CALLBACK_URL=http://localhost:5000/api/auth/social/facebook/callback

# Apple OAuth Configuration (선택사항)
# APPLE_CLIENT_ID=your-apple-client-id
# APPLE_TEAM_ID=your-apple-team-id
# APPLE_KEY_ID=your-apple-key-id
# APPLE_PRIVATE_KEY=your-apple-private-key

